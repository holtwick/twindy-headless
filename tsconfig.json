{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",   
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.js",
    "**/*.vue",
  ],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"]
}
